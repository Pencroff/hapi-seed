extends ../layout
block content
    br
    br
    br
    br
    br
    .container
        .row
            .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
                .panel.panel-default
                    .panel-heading.text-center
                        h4 Sign in
                    .panel-body
                        .row
                            .col-xs-12
                                form(role='form', method='post')
                                    .form-group
                                        label.control-label(for='inputLogin') Login
                                        input#inputLogin.form-control(type='text', name='user', placeholder='Username', required='required')
                                    .form-group
                                        label(for='inputPassword') Pasword
                                        input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='required')
                                    .form-group
                                        button.btn.btn-primary.btn-block.btn-large(type='submit') Let me in.